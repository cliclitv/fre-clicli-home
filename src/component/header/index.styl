@import "../../common/css/var.styl"

.header
  position absolute 
  color #fff 
  top 0
  left 0
  right 0
  .wrap 
    display flex
    align-items center
  .logo
    padding 10px 20px
    img 
      margin 0 10px
      width 40px
      display inline-block
    h1 
      font-size 14px
      display inline-block
      padding-bottom 5px
  a 
    color #fff 
    padding 2px 10px
    border-radius 10px
    transition .3s
  a:hover
    background $theme
  .search 
    margin-left 20px
    input 
      padding 5px 20px
      border-radius 2px
      border 0px 
      background rgba(255,255,255,.5)
  .biu 
    position:absolute 
    right 0