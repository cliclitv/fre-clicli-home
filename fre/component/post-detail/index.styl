.post
  width 100%
  display flex
  margin-top 20px

.post-detail
  width 520px
  padding 10px

  article
    img
      width 100%
      border-radius 2px

    h1
      font-size 18px
      font-weight bold

    h2
      font-size 16px
      font-weight bold

    h3
      font-size 14px
      font-weight bold

.info
  width 600px
  padding 10px

  .user
    display flex
    align-items center

  .avatar, img
    width 60px
    height 60px
    border-radius 30px

  span
    padding 10px

  .uid
    color #bbb
  h1
    padding 10px
    display inline-block

